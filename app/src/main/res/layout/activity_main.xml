<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Demo!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.05"
            android:layout_marginTop="8dp" android:id="@+id/textView"/>
    <Button
            android:text="Query items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/queryBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="QUERY RESULTS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/queryResults" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/queryBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:visibility="gone"/>
    <Button
            android:text="Buy Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buy" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/queryResults" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>